  div.text-center.leading-5
    div.shadow-lg.w-auto
      div.w-full
        - if @letter.image.present?
          = image_tag @letter.image.to_s
        - else
          = image_tag('default.jpg')

      div.text-blue-900.main-font.text-1xl.px-4.py-2
        = @letter.title
        span.text-blue-900.main-font.text-xs
          | „Å∏
      div.text-blue-900.main-font.text-1xl.px-4.py-2
        = @letter.body

